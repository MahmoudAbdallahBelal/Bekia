<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_registeration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <!--            <ImageView-->
                <!--                android:src="@drawable/user_image"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:id="@+id/imageView_user_image"-->
                <!--                android:layout_width="120dp"-->
                <!--                android:layout_height="120dp"-->
                <!--                android:adjustViewBounds="true"-->
                <!--                android:scaleType="centerCrop" />-->

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView_user_image_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:gravity="center"

                    android:src="@drawable/profile_image"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>


                <Button
                    android:id="@+id/button_enable_edit_profile"
                    android:layout_margin="20dp"
                    android:text="Enable Edit Profile Info"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

/>

                    <EditText

                        android:enabled="false"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:id="@+id/name_profile_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />






                    <EditText
                        android:enabled="false"

                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:id="@+id/email_profile_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        />


                    <EditText
                        android:enabled="false"

                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:id="@+id/phone_profile_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        />


                <EditText

                    android:enabled="false"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:focusableInTouchMode="true"
                    android:id="@+id/city_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <ProgressBar
                    android:visibility="gone"
                    android:layout_margin="5dp"
                     android:layout_gravity="center"
                    android:id="@+id/progress_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/button_edit_profile"
                    android:layout_margin="20dp"
                    android:text="Edit Profile"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />
                           </LinearLayout>



        </ScrollView>
    </LinearLayout>
</LinearLayout>
